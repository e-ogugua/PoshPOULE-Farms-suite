# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
indent_size = 2

[*.{js,jsx,ts,tsx}]
quote_type = single
semi = true
trailing_comma = all
print_width = 100

[*.{css,scss,less}]
indent_size = 2
